<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/base"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/common_love"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="11"
        android:padding="10dp"
        android:src="@drawable/love" />

    <TextView
        android:id="@+id/common_love_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="14"
        android:gravity="center|left"
        android:text="0"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/common_hate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="11"
        android:padding="10dp"
        android:src="@drawable/hate" />

    <TextView
        android:id="@+id/common_hate_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="14"
        android:gravity="center|left"
        android:text="0"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/common_share"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="11"
        android:padding="10dp"
        android:src="@drawable/share" />

    <TextView
        android:id="@+id/common_share_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="14"
        android:gravity="center|left"
        android:text="0"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/common_comment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="11"
        android:padding="10dp"
        android:src="@drawable/comment" />

    <TextView
        android:id="@+id/common_comment_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="14"
        android:gravity="center|left"
        android:text="0"
        android:textColor="@color/gray"
        android:textSize="18sp" />

</LinearLayout>